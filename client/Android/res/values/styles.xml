<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextViewStyleBig" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dd_dimen_38px</item>
        <item name="android:textColor">@color/fuxk_base_color_black</item>
    </style>

    <style name="TextViewStyleMiddle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dd_dimen_28px</item>
        <item name="android:textColor">@color/fuxk_base_color_black</item>
    </style>

    <style name="TextViewStyleSmall" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dd_dimen_24px</item>
        <item name="android:textColor">@color/fuxk_base_color_black</item>
    </style>

</resources>